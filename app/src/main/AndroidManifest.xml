<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.meicode.fieldproject">

    <!-- Permissions for Internet and Firebase (if not already included) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.DayNight"
        tools:ignore="MissingClass">

        <!-- Main activity (Entry point) -->
        <activity android:name=".LoginActivity"
            android:exported="true"
            android:label="Main"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login activity -->
        <activity android:name=".MainActivity"
            android:label="Login" />


        <!-- Chat activity -->

        <!-- Seller profile activity -->
        <activity android:name=".SignUpActivity"
            android:label="Seller Profile" />

        <!-- Customer profile activity -->
        <activity android:name=".CustomerDashboard"
            android:label="Customer Profile" />

        <!-- Other activities (e.g., shop profile, work, etc.) -->
        <activity android:name=".SellerProfileActivity"
            android:label="Shop Profile" />

        <activity android:name=".ShopProfileSetupActivity"
            android:label="Shop Profile" />

        <activity android:name=".AddWorkActivity"
            android:label="Shop Profile" />




    </application>
</manifest>
